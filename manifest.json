{
  "name": "gmate",
  "version": "0.0.3.3",
  "manifest_version": 2,
  "minimum_chrome_version": "50",
  "description": "google calendar UI enhancement",
  "browser_action": {
    "default_title": "gmate",
    "default_popup": "options.html"
  },
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "script/common.js",
      "script/background/index.js",
      "script/background/edit-page-actions.js",
      "script/background/auto-room-searcher.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://calendar.google.com/calendar/*"
      ],
      "js": [
        "script/common.js",
        "script/content/allow-guest-modify-event.js",
        "script/content/zero-invitee-reminder.js",
        "script/content/generate-zoom-id.js",
        "script/content/auto-room-booking.js",
        "script/content/save-edit.js",
        "script/content/register-meeting-to-book.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "notifications"
  ]
}