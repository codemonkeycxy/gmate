{
  "name": "gmate",
  "version": "0.0.1.2",
  "manifest_version": 2,
  "description": "google calendar UI enhancement",
  "browser_action": {
    "default_title": "gmate"
  },
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://calendar.google.com/calendar/*"
      ],
      "js": [
        "allow-guest-modify-event.js",
        "zero-invitee-reminder.js"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ]
}